# =============================
# صفحة 404 مخصصة
# =============================
ErrorDocument 404 /404.html

# =============================
# تفعيل إعادة كتابة الروابط
# =============================
RewriteEngine On

# =============================================
# إعادة التوجيه الدائمة (301) للنطاق القديم
# =============================================

# 1. إعادة توجيه النطاق القديم بالكامل إلى الجديد
RewriteCond %{HTTP_HOST} ^drmsharabi\.github\.io$ [NC]
RewriteRule ^(.*)$ https://ent.drmsharabi.com/$1 [R=301,L,NE]

# 2. إعادة توجيه أي مسارات /ENTclinic (لأي نطاق)
RewriteRule ^ENTclinic(?:/(.*))?$ https://ent.drmsharabi.com/$1 [R=301,L,NE]

# =============================================
# تحسينات SEO وهيكلة URL
# =============================================

# 1. إزالة index.html من نهاية الروابط
RewriteCond %{THE_REQUEST} /index\.html [NC]
RewriteRule ^(.*?)index\.html$ /$1 [L,R=301,NC,NE]

# 2. إزالة امتداد .html من الروابط (للتصفح بدون الامتداد)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# 3. إزالة الشرطة المائلة الزائدة
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^ %1 [R=301,L]

# =============================================
# إعدادات الأمان والأداء
# =============================================

# 1. منع الوصول إلى الملفات المخفية
RedirectMatch 404 /\..*$

# 2. تعطيل فهرسة المجلدات
Options -Indexes

# 3. ضغط الملفات لتحسين الأداء (إصدار محسّن)
<IfModule mod_deflate.c>
    # ضغط النصوص
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    
    # ضغط الخطوط
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
    AddOutputFilterByType DEFLATE application/font-woff
    AddOutputFilterByType DEFLATE application/font-woff2
    
    # ضغط الصور (للملفات النصية مثل SVG)
    AddOutputFilterByType DEFLATE image/svg+xml
    
    # معالجة المتصفحات القديمة
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSI[E] !no-gzip !gzip-only-text/html
</IfModule>

# 4. التخزين المؤقت للمتصفح (Cache) - إصدار محسّن
<IfModule mod_expires.c>
  ExpiresActive On

  # الصور
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # ملفات الفيديو
  ExpiresByType video/mp4 "access plus 1 year"
  ExpiresByType video/webm "access plus 1 year"

  # CSS و JS
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"

  # خطوط الويب
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  
  # خطوط TTF و OTF (جديد)
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType application/x-font-ttf "access plus 1 year"
  ExpiresByType application/x-font-otf "access plus 1 year"

  # ملفات HTML (موازنة بين التحديث والتخزين المؤقت)
  ExpiresByType text/html "access plus 2 hours"

  # PDF
  ExpiresByType application/pdf "access plus 1 month"

  ExpiresDefault "access plus 1 month"
</IfModule>

<IfModule mod_headers.c>
  # تفعيل التخزين المؤقت للمتصفحات
  <FilesMatch "\.(ico|jpg|jpeg|png|gif|svg|webp|woff|woff2|ttf|otf|css|js)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "public, max-age=7200, must-revalidate"
  </FilesMatch>
  
  # CORS للخطوط (مهم لخطوط Cairo المحلية) - جديد
  <FilesMatch "\.(ttf|otf|woff|woff2|eot)$">
    Header set Access-Control-Allow-Origin "*"
    Header set Vary Accept-Encoding
  </FilesMatch>
</IfModule>

# 5. تحسين إعدادات ETag - جديد
FileETag MTime Size
<IfModule mod_headers.c>
    # تعطيل ETag للملفات الثابتة لتحسين التخزين المؤقت
    <FilesMatch "\.(css|js|jpg|jpeg|png|gif|webp|ico|ttf|otf|woff|woff2|svg)$">
        Header unset ETag
        FileETag None
    </FilesMatch>
</IfModule>

# 6. حماية ملف .htaccess
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>
